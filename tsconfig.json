{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": false,
    "isolatedModules": true,
    "incremental": false,
    "verbatimModuleSyntax": false,
    "outDir": "./dist",
  },
  "include": ["**/*.ts", "**/*.mjs"],
  "exclude": ["node_modules", "./dist", "./esm"]
}
